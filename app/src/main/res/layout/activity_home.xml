<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/homebg">


    <RelativeLayout
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/gridtxt"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/homebg"
            android:gravity="center"
            android:text="DyscAide Menu"
            android:textColor="@color/colorWhite"
            android:textSize="34sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <GridLayout
        android:id="@+id/mainGrid"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_weight="8.5"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <!-- row 1-->
        <!---col 1 -->



        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            card_view:cardElevation="8dp"
            card_view:cardCornerRadius="8dp"
            >



            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:orientation="vertical"
                >


                <ImageView
                    android:id="@+id/calculatorBtn"
                    android:src="@drawable/ic_calculation_colored"
                    android:layout_gravity="center_horizontal"
                    android:foregroundGravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/calculationtxt"
                    android:text="Calculation"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/calspeakerbtn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/circlebtn"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_baseline_volume_up_little"/>



            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!-- col 2-->

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            card_view:cardElevation="8dp"
            card_view:cardCornerRadius="8dp"
            android:background="@drawable/circlebtnwhite"

            >


            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/transposeBtn"
                    android:src="@drawable/ic_number"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/transposetxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Transpose"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/traspeakerbtn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/circlebtn"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_baseline_volume_up_little"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!--row 2-->

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            card_view:cardElevation="8dp"
            card_view:cardCornerRadius="8dp"
            android:background="@drawable/circlebtnwhite"

            >


            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/countBtn"
                    android:src="@drawable/ic_mathematics"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/counttxt"
                    android:text="Count"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/couspeakerbtn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/circlebtn"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_baseline_volume_up_little"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!-- col 2-->

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            card_view:cardElevation="8dp"
            card_view:cardCornerRadius="8dp"
            android:background="@drawable/circlebtnwhite"

            >


            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/monetaryBtn"
                    android:src="@drawable/ic_money_colored"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/monetarytxt"
                    android:text="Monetary"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/monspeakerbtn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/circlebtn"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_baseline_volume_up_little"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </GridLayout>




</LinearLayout>